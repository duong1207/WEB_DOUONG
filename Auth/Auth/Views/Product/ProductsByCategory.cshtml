
@{
    ViewBag.Title = "ProductsByCategory";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}

@using Auth.Models;
@using PagedList.Mvc;
@model PagedList.IPagedList<douong>
<h6>@ViewBag.ThongBao</h6>
@{int i = 0;
    foreach (var item in Model)
    {
        i++;
        <div class="col-md-4 product-men">
            <div class="product-shoe-info shoe">
                <div class="men-pro-item">
                    <div class="men-thumb-item">
                        <img src="/Acess/@item.Anh" alt="">
                        <div class="men-cart-pro">
                            <div class="inner-men-cart-pro">
                                <a href="single.html" class="link-product-add-cart">Quick View</a>
                            </div>
                        </div>
                        <span class="product-new-top">New</span>
                    </div>
                    <div class="item-info-product">
                        <h4>
                            <a href="@Url.Action("DetailsProduct", "Product", new { @Madouong = item.Madouong })">@item.Tendouong</a>
                        </h4>
                        <div class="info-product-price">
                            <div class="grid_meta">
                                <div class="product_price">
                                    <div class="grid-price ">
                                        <a class="money ">@item.dongiaban</a>
                                    </div>
                                </div>

                            </div>
                            <div class="shoe single-item hvr-outline-out">
                                <form action="#" method="post">
                                    <input type="hidden" name="cmd" value="_cart">
                                    <input type="hidden" name="add" value="1">
                                    <input type="hidden" name="shoe_item" value="Bella Toes">
                                    <input type="hidden" name="amount" value="675.00">
                                    <button type="submit" class="shoe-cart pshoe-cart"><i class="fa fa-cart-plus" aria-hidden="true"></i></button>

                                    <a href="#" data-toggle="modal" data-target="#myModal1"></a>
                                </form>

                            </div>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
        </div>

        if (i % 3 == 0)
        {
            <div style="clear:both"></div>
        }
    }
}
Trang @(Model.PageCount<Model.PageNumber?0:Model.PageNumber)/@Model.PageCount
@Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))



