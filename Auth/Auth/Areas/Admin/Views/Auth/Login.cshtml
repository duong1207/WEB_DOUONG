
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <title>Login</title>
    <style>
        .khung {
            max-width: 600px;
            border: 1px solid #ccc;
            border-radius: 10px;
            margin: 50px auto;
        }
    </style>
</head>
<body>
    @using (Html.BeginForm())
    {
        <div class="khung mt-md-5 p-5">
            <h3 class="text-center text-danger">ĐĂNG NHẬP HỆ THỐNG</h3>
            <div class="row">

                <div class="col-md-12">
                    <div class="form-group">
                        <label>Tên đăng nhập(*)</label>
                        <input class="form-control" type="text" name="username" required placeholder="Tên đăng nhập hoặc email" value="" />
                    </div>
                    <div class="form-group">
                        <label>Mật khẩu(*)</label>
                        <input class="form-control" type="password" name="password" required placeholder="Mật khẩu" value="" />
                    </div>
                    <div class="form-group">
                        <button class="btn btn-success" type="submit">Đăng nhập</button>
                    </div>
                    <div class="form-group text-danger">
                        @ViewBag.StrError
                    </div>
                    <div class="form-group">
                        <span>Bạn chưa có tài khoản? Hãy <a href='@Url.Action("Register", "Auth")'>đăng ký</a></span>
                    </div>
                </div>
            </div>
        </div>
    }
</body>
</html>
